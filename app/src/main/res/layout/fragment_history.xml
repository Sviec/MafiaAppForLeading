<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.HistoryFragment"
    android:layout_marginHorizontal="20dp">

    <TextView
        android:id="@+id/lastGamesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/last_games_title"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lastGamesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/lastGamesTitle"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/model_last_game"/>
</androidx.constraintlayout.widget.ConstraintLayout>